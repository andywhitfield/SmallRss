@model SmallRss.Web.Models.Home.LoginViewModel
<h2>Log In</h2>

@if (!string.IsNullOrWhiteSpace(Model.Message)) {
    <strong>@Model.Message</strong>
}

<form id="loginform" action="@Url.Action("login")" method="post">
    <input type="button" name="loginWithGoogle" value="Google" title="Login using your Google account" data-url="https://www.google.com/accounts/o8/id" />
    <input type="button" name="loginWithMyOpenID" value="MyOpenID" title="Login using your MyOpenID account" data-url="https://www.myopenid.com/" />

    <p>
    <label for="openid">Custom OpenID URL: </label> <input type="text" id="openid" name="openid" /> <input type="submit" value="Login using this OpenID" />
    </p>
</form>

@section Scripts {
<script type="text/javascript">
    $(function () {
        $('#openid').focus();

        $('input[data-url]').click(function () {
            $('#openid').val($(this).attr('data-url'));
            $('#loginform').submit();
        });
    });
</script>
}
