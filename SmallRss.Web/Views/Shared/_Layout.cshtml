        <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
        <title>SmallRss</title>
        <script type="text/javascript">
            var urls = {
                feedstatus_api: '@Url.Action("feedstatus", "api")',
